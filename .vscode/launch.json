    "version": "0.2.0",
    "configurations": [

        {
            "type": "firefox",
            "request": "attach",
            "name": "Attach"
        },

        {
            "name": "Launch localhost",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "url": "http://localhost/3000",
            "webRoot": "${workspaceFolder}"
        },

        {
            "name": "Launch localhost",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "url": "http://localhost/index.html",
            "pathMappings": [{
                "url": "http://localhost",
                "path": "${workspaceFolder}"
            }]
        },

        


    ]
}